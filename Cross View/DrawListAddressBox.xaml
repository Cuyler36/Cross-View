<Window x:Class="Cross_View.DrawListAddressBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cross_View"
        mc:Ignorable="d"
        Title="Draw List Address" Height="140" Width="200" ResizeMode="NoResize">
    <Grid>
        <Label Content="Enter the hex Draw List Address" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="DrawListAddressTextBox" Height="20" Width="120" MaxLength="8" TextChanged="DrawListAddressTextBox_TextChanged" KeyDown="DrawListAddressTextBox_KeyDown"/>
        <Button x:Name="OKButton" Content="Done" Width="100" Height="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 8" Click="OKButton_Click"/>
    </Grid>
</Window>